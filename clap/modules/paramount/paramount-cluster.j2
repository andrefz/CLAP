setups:
  paramount-setup-master:
    groups:
    - name: paramount/master
  paramount-setup-slave:
    groups:
    - name: paramount/slave

clusters:
  paramount-cluster:
    nodes:
      paramount-node-master:
        type: {{ node_type }}
        count: 1
        setups:
        - paramount-setup-master

      paramount-node-slave:
        type: {{ node_type }}
        count: {{ node_count-1 }}
        setups:
        - paramount-setup-slave